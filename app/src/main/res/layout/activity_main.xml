<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/fondo1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titulo"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="623dp"
        android:text="Registro de usuarios"
        android:textColor="@color/naranja"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <EditText
        android:id="@+id/username"
        android:layout_width="304dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/edit_text_border"
        android:drawableLeft="@drawable/user_naranja"
        android:hint="Nombre de usuario (3 o mas caracteres)"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/password"
        android:layout_width="303dp"
        android:layout_height="55dp"
        android:layout_below="@+id/username"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="57dp"
        android:background="@drawable/edit_text_border"
        android:drawableLeft="@drawable/candado_naranja"
        android:hint="Contraseña (5 o mas caracteres)"
        android:inputType="textPassword"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/repassword"
        android:layout_width="303dp"
        android:layout_height="54dp"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/edit_text_border"
        android:drawableLeft="@drawable/candado_naranja"
        android:hint="Reingrese contraseña"
        android:inputType="textPassword"
        android:textAlignment="center" />


    <!-- android:layout_below="@+id/repassword"-->

    <Button
        android:id="@+id/btnsignup"
        android:layout_width="159dp"
        android:layout_height="67dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="525dp"
        android:layout_marginEnd="241dp"
        android:layout_marginBottom="156dp"
        android:background="@drawable/btn_redondo"
        android:text="Registrar usuario"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="250dp"
        android:layout_marginTop="525dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="158dp"
        android:background="@drawable/btn_redondo"
        android:text="Pagina de logueo "
        android:textColor="@color/black" />
    <!--android:layout_below="@+id/btnsignup"-->



</RelativeLayout>