<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/fondo3"
    tools:context=".ActivityLogin">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="637dp"
        android:text="Logueo de usuarios"
        android:textAlignment="center"
        android:textColor="@color/naranja"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <EditText
        android:id="@+id/nombreLogin"
        android:layout_width="267dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="74dp"
        android:background="@drawable/edit_text_border"
        android:drawableLeft="@drawable/user_naranja"
        android:hint="Nombre de usuario"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/contraLogin"
        android:layout_width="268dp"
        android:layout_height="73dp"
        android:layout_below="@+id/nombreLogin"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="73dp"
        android:background="@drawable/edit_text_border"
        android:drawableLeft="@drawable/candado_naranja"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnLogueo"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="255dp"
        android:layout_marginBottom="392dp"
        android:background="@drawable/btn_redondo"
        android:text="Iniciar sesion"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnRegistro"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="252dp"
        android:layout_marginTop="314dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="392dp"
        android:background="@drawable/btn_redondo"
        android:text="Volver al registro "
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tituloPersFav"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="498dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="183dp"
        android:background="@color/naranja"
        android:text="¡Escribi el nombre tu personaje favorito para que el proximo usuario que entre pueda verlo!\n\nPersonaje elegido :"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <EditText
        android:id="@+id/nombrePersFav"
        android:layout_width="207dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="623dp"
        android:layout_marginEnd="106dp"
        android:background="@drawable/edit_text_border"
        android:drawableLeft="@drawable/gokucarachica"
        android:hint="Personaje"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnGuardarPers"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="141dp"
        android:layout_marginTop="670dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btn_redondo"
        android:text="Guardar Personaje"
        android:textColor="@color/black"
        />
</RelativeLayout>